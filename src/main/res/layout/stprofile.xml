<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appbg"
    tools:context=".Stprofile_activity">

    <RelativeLayout
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/headingback"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >



    </RelativeLayout>

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:dividerHeight="0.0px"
            android:clipToPadding="false"
            android:clipChildren="false"
            app:cardElevation="10dp"
            app:cardPreventCornerOverlap="false"
            >

            <ImageView
                android:id="@+id/profilepic"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="@drawable/editshape"
                android:src="@drawable/man" />


        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="260dp"
        android:background="@color/appbg"
        app:layout_constraintTop_toBottomOf="@+id/heading">

        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="ID          :"
            android:textColor="@color/headingtxtclr"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_toEndOf="@+id/id"
            android:textColor="@color/headingtxtclr"
            android:textSize="20dp"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Name    :"
            android:textColor="@color/headingtxtclr"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nametxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id"
            android:textAllCaps="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_toEndOf="@+id/name"
            android:textColor="@color/headingtxtclr"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="Course  :"
            android:textColor="@color/headingtxtclr"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/coursetxt"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/course"
            android:textColor="@color/headingtxtclr"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/course"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="Email     :"
            android:textColor="@color/headingtxtclr"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emailtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/course"
            android:layout_marginTop="20dp"
            android:textAllCaps="true"
            android:layout_toEndOf="@+id/email"
            android:textColor="@color/headingtxtclr"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="Mobile   :"
            android:textColor="@color/headingtxtclr"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mobtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_marginTop="20dp"
            android:textAllCaps="true"
            android:layout_toEndOf="@+id/mob"
            android:textColor="@color/headingtxtclr"
            android:textSize="20dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/vote"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/mob"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn2"
            android:text="Go For Vote"
            android:textSize="30dp"
            android:textColor="@color/headingtxtclr"
            android:textStyle="bold" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>